<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="textColor" format="reference" />
    <attr name="iconColor" format="reference" />
    <attr name="editIconColor" format="reference" />
    <attr name="editColor" format="reference" />
    <attr name="artistText" format="reference"/>
    <attr name="nameTrackText" format="reference"/>
    <attr name="infoTrackText" format="reference"/>

    <style name="HeadingTextStyle">
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="RegularTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorSecondaryVariant</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ImageOrSwitchSettingsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
    </style>

    <style name="InfoPlayStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/track_name_size</item>
        <item name="android:textColor">?attr/infoTrackText</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="layout_constraintStart_toStartOf">@+id/leftBorder</item>
    </style>

    <style name="ChangeableInfoPlayStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/track_name_size</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">end</item>
        <item name="layout_constraintEnd_toEndOf">@id/rightBorder</item>
        <item name="layout_constraintStart_toEndOf">@id/textsBarrier</item>
    </style>

    <style name="TrackHeadingPlayStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="layout_constraintEnd_toEndOf">@id/rightBorder_header</item>
        <item name="layout_constraintStart_toStartOf">@id/leftBorder_header</item>
    </style>

</resources>